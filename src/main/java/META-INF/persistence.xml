<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
	<persistence-unit name="WachiturroBET">
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	<class>modelo.entidades.Usuario</class>
		<class>modelo.entidades.UsuarioRegistrado</class>
		<class>modelo.entidades.Billetera</class>
		<class>modelo.entidades.Movimiento</class>
		<properties>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/wachiturrobet"/>
			<property name="jakarta.persistence.jdbc.user" value="root"/>
			<property name="jakarta.persistence.jdbc.password" value=""/>
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<!-- property name="eclipselink.ddl-generation" value="create-tables" /-->
			<!-- property name="eclipselink.ddl-generation" value="drop-and-create-tables" /-->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
		</properties>
	
	</persistence-unit>
</persistence>